<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_bg"
    android:orientation="vertical">


    <RadioGroup
        android:id="@+id/rg_expert"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_legitimateDataNum"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_5"
            android:layout_weight="1"
            android:background="@drawable/bg_for_rb_notice"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/rb_illegalDataNum"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_5"
            android:layout_weight="1"
            android:background="@drawable/bg_for_rb_notice"
            android:button="@null"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/rb_dbDataNum"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_5"
            android:layout_weight="1"
            android:background="@drawable/bg_for_rb_notice"
            android:button="@null"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="14sp" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bg_rb_notice_checked"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="序号"
            android:textColor="#000000"
            android:textSize="10sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="专家\n编号"
            android:textColor="#000000"
            android:textSize="10sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="专家\n姓名"
            android:textColor="#000000"
            android:textSize="10sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="电话"
            android:textColor="#000000"
            android:textSize="10sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:lines="2"
            android:text="短信内容"
            android:textColor="#000000"
            android:textSize="10sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/listView_expert"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_bg_rb_notice_checked"/>

    <TextView
        android:id="@+id/show_num"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_5"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="10sp"
        android:visibility="gone" />

</LinearLayout>