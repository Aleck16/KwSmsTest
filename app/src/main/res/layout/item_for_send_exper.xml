<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:padding="@dimen/width_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_sms_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/width_2"
            android:gravity="center"
            android:text="1"
            android:textSize="25sp"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/textView_name_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="@dimen/width_1"
            android:text="李雪阳（108489）" />

        <TextView
            android:id="@+id/textView_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="@dimen/width_1"
            android:text="13011336666" />

        <CheckBox
            android:id="@+id/checkBox_delect"
            android:layout_width="@dimen/height_4"
            android:layout_height="@dimen/height_4"
            android:background="@drawable/bg_for_ck_delect"
            android:layout_gravity="center_vertical"
            android:button="@null"
            android:gravity="center"
            android:layout_margin="@dimen/width_1" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView_sms_mansege"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="5"
        android:text="ajgfkjhfdkjhfknf vknfkjgkjdfjglnglkndflkglk vdfkjldfjdflkngdfnglkndflkglkdfjlksjgflk  jfgdkljglfnvnvnvoitjpiorjtnfdmn"
        android:textColor="@color/black"
        />
</LinearLayout>